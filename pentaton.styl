body
  padding 0

.section-selectors
  text-align center

.section-selector
  display inline-block
  margin 0
  opacity .7
  cursor pointer

  &:hover
    opacity 1

  img
    width 7em
    height 7em
  // The controller icon is taller and wider than the others
  &#selector-games
    margin-left .6em

    img
      width 6em
      height 6em

.site
  margin-top .5em
  height 10em
  position relative
  overflow hidden
  opacity .7
  &:hover
    opacity 1

  .name
    position absolute
    color white
    bottom .1em
    left -.1em
    font-weight normal
    font-size 450%
    font-family Vollkorn

@media (min-width: 768px)
  .site-row
    margin-top 20px
    &:nth-child(2)
      margin-top 0

  .site
    margin-top 0

@media (min-width: 1200px)
  .site-row
    margin-top 30px
